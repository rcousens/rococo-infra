{
  "builders": [
    {
      "type": "digitalocean",
      "image": "ubuntu-15-04-x64",
      "region": "sfo1",
      "size": "512mb",
      "snapshot_name": "rococo-registry"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "../../bootstrap.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "registry.yml",
      "playbook_dir": "../../.ansible/roles/rococo-ansible"
    }
  ]
}